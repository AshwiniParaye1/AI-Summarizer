{
  "manifest_version": 3,
  "name": "Webpage Summarizer",
  "version": "1.1",
  "description": "Summarize content from the current webpage using AI.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["http://localhost:3000/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize this Page",
    "default_icon": {
      "16": "./icon/ai-summary.png",
      "48": "./icon/ai-summary.png",
      "128": "./icon/ai-summary.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
